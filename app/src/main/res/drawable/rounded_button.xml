<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF8C00" /> <!-- 按下时的填充颜色 -->
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="#FFFFA500" /> <!-- 按下时的边框颜色 -->
        </shape>
    </item>

    <!-- 默认状态 -->
    <item>
        <shape>
            <solid android:color="#FF6200EE" /> <!-- 默认填充颜色 -->
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="#FFFFD700" /> <!-- 默认边框颜色 -->
        </shape>
    </item>
</selector>
